{% macro keyState(name) %}
  {{- state.kbd[name] -}}
{% endmacro %}

{% macro block(row, col) %}
  {%- if state.wrd[row][col] -%}
    <img height="40px" src="{{ imgBaseUrl }}{{ state.wrd[row][col] }}{{ state.fbk[row][col] }}.png" />
  {%- else -%}
    <img height="40px" src="{{ imgBaseUrl }}blank.png" />
  {%- endif -%}
{% endmacro %}

